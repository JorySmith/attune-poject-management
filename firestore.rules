rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2022, 3, 27);
    }
  }
}

// Security and authentication:

// Users collection
// - authenticated users can read and write
// - only users who created a document can update it (per user.id match)

// Projects collection
// - authetnicated users can create, read, and update documents
// - only users who create a document can delete it (per doc.createdBy match)